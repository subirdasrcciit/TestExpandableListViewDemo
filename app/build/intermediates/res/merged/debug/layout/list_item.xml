<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/restaurant_item_row_h"
    android:layout_marginLeft="@dimen/ten_padding"
    android:layout_marginRight="@dimen/ten_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/restaurant_item_row_card_view_h"
        android:layout_marginTop="30dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/restaurant_item_row_card_view_h"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/restaurant_banner_img_w">

                <TextView
                    android:id="@+id/titleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/quad_padding"
                    android:gravity="center_vertical"
                    android:text="Mile"
                    android:textColor="@color/ash"
                    android:textSize="@dimen/text_size_title" />

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleTxt"
                    android:gravity="center_vertical"
                    android:text="Mile"
                    android:textColor="@color/ash"
                    android:textSize="@dimen/text_size_discribe" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/restaurant_banner_img_w"
                android:layout_marginTop="@dimen/thirteen_padding">

                <TextView
                    android:id="@+id/priceTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/fifteen_padding"
                    android:text="$20"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_tiny_large_title"
                    android:textStyle="bold" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/restaurant_item_row_h">

        <info.androidhive.expandablelistview.customviews.CircleImageView
            android:id="@+id/BannerImg"
            android:layout_width="@dimen/restaurant_banner_img_w"
            android:layout_height="@dimen/restaurant_banner_img_h"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/ten_padding"
            android:src="@drawable/app_bg"
            app:civ_border_color="@color/orange"
            app:civ_border_width="2dp" />


        <RelativeLayout
            android:id="@+id/cartRL"
            android:layout_width="@dimen/restaurant_cart_img_w"
            android:layout_height="@dimen/restaurant_cart_img_h"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/view_margin_large">

            <ImageView
                android:layout_width="@dimen/restaurant_cart_img_w"
                android:layout_height="@dimen/restaurant_cart_img_h"
                android:src="@drawable/circle_shape_orange" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/cart" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/restaurant_cart_img_w"
            android:layout_height="@dimen/restaurant_cart_img_h"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/view_margin_large">

            <ImageView
                android:layout_width="@dimen/restaurant_cart_img_w"
                android:layout_height="@dimen/restaurant_cart_img_h"
                android:src="@drawable/circle_shape_orange" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/cart" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/mobilecoe-imac6/Desktop/SUBIR_WP/ExpandableListView/app/src/main/res/layout/list_item.xml -->